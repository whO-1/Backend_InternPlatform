<body>
    <header>
        <div id="nav-bar" style="z-index:100">
            <input id="nav-toggle" type="checkbox" />
            <div id="nav-header">
                <a id="nav-title" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" > 
                    <i class="fas bi bi-speedometer2 h5"></i>
                    <span>Dashboard</span>
                </a>
                <label for="nav-toggle"><span id="nav-toggle-burger"></span></label>
                <hr />
            </div>
            <div id="nav-content">
                @if (User.IsInRole("SuperAdmin"))
                {
                    foreach (var tab in Constants.PrivateTabs)
                    {
                        <div class="nav-button d-flex flex-row align-items-center">
                            <a href="@Url.Action($"{tab.Item2}", $"{tab.Item3}", new { area = $"{tab.Item4}" })" class="d-flex align-items-center px-2 @(ViewBag.Title == $"{tab.Item2}" ? "active" : "")">
                                <i class="bi @tab.Item5 " ;></i>
                                &nbsp;
                                <span class="m-0 p-0">@tab.Item1</span>
                            </a>
                        </div>
                    }
                }

                @{
                    foreach (var tab in Constants.PublicTabs)
                    {
                        <div class="nav-button d-flex flex-row align-items-center">
                            <a href="@Url.Action($"{tab.Item2}", $"{tab.Item3}", new { area = $"{tab.Item4}" })" class="d-flex align-items-center px-2 @(ViewBag.Title == $"{tab.Item2}" ? "active" : "")">
                                <i class="bi @tab.Item5 " ;></i>
                                &nbsp;
                                <span class="m-0 p-0">@tab.Item1</span>
                            </a>
                        </div>
                    }
                }


            </div>
            <input id="nav-footer-toggle" type="checkbox" />s

                @Html.Partial("_AdminLoginPartial")

        </div>
