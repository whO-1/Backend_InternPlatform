@model internPlatform.Domain.Models.ViewModels.URUpdateViewModel
@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMenuLayout.cshtml";
}

<h2>Delete User</h2>


<div class="container d-flex flex-column align-items-center">
    @using (Html.BeginForm("DeleteUser", "Dashboard", FormMethod.Post, new { role = "form", @class = "col-12 d-flex flex-column align-items-center" }))
    {
        <input value="@Model.User.User.Id" id="User_User_Id" name="User.User.Id" hidden>
        <input value="@Model.User.Role" id="User_Role" name="User.Role" hidden>
        <input value="@Model.User.User.UserName" id="User_User_UserName" name="User.User.UserName" hidden>

        <div class=" row col-12 col-lg-7 mt-3 ">
            @Html.AntiForgeryToken()

        </div>
        <div class=" row col-12 col-lg-7 mt-3 ">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.LabelFor(m => m.User.User.UserName, new { @class = "col-md-3 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.User.User.UserName, new { @class = "form-control", disabled = true })
                </div>
            </div>
        </div>
        <div class=" row col-12 col-lg-7 mt-3">
            <div class="row">
                @Html.LabelFor(m => m.SelectedRole, new { @class = "col-md-3 col-form-label" })
                <div class="col-md-8">
                    <select class="form-control" id="SelectedRole" name="SelectedRole" disabled>
                        @foreach (var item in Model.Roles)
                        {
                            <option id="@item.Value" value='@item.Text' @(item.Selected ? "selected" : "")> @item.Text</option>
                        }
                    </select>
                    @*@Html.DropDownListFor(m => m.SelectedRole, Model.Roles , new { @class = "form-control" })*@
                </div>
            </div>
        </div>
        <div class=" row col-12 col-lg-7 mt-3 ">
            <div class="row col-12  ">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-3 col-form-label " })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control " })
                </div>
            </div>
            <div class="row mt-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row mt-4 col-12 d-flex justify-content-center">
            <div class="offset-md-2 col-2 m-0">
                @Html.ActionLink("Back to users", "Users", "Dashboard", new { @class = "btn text-muted" })
            </div>
            <div class="offset-md-2 col-2 m-0">
                <button type="submit" value="Update" class="btn btn-danger ">Delete</button>
            </div>
            
        </div>
    }


</div>
