@model internPlatform.Domain.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class=" container d-flex flex-column align-items-center  p-0 m-0">
    <p id="title" class="text-secondary p-0 m-0 mt-3" style="font-size:14px"> Create now your account </p>
    <div class="row col-12 mt-2">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger help-text" })
            <div class="row col-12  p-0 m-0 ">
                <div class="col-12 p-0 m-0">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control py-3 help-text", @placeholder="Email" })
                </div>
            </div>
            <div class="row mt-2 col-12 p-0 m-0 ">
                <div class="col-12 p-0 m-0">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control py-3 help-text", @placeholder = "Password" })
                </div>
            </div>
            <div class="row mt-2 col-12 p-0 m-0">
                <div class="col-12 p-0 m-0">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control py-3 help-text", @placeholder = "Confirm password" })
                </div>
            </div>
            <div class="row">
                <div class=" col-12">
                    <input type="submit" value="Register" class="btn btn-outline-dark col-12 mt-3" />
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
