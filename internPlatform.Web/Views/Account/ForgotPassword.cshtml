@model internPlatform.Domain.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class=" container d-flex flex-column align-items-center justify-content-center ">
   
    <h5 id="title" class="mt-4">@ViewBag.Title</h5>

    <div class="row col-12 mt-2">

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
         
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row col-12  p-0 m-0">
                <div class="col-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control py-3 help-text", @placeholder="Email" })
                </div>
            </div>
            <div class="row row col-12  p-0 m-0 mt-3">
                <div class="col-12">
                    <input type="submit" class="btn btn-outline-dark" value="Email Link" />
                </div>
            </div>
        }
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
